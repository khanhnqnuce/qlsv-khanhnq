@model FDI.Base.Gallery_Album

@{
    ViewBag.Title = "Xem chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}

<div class="col-sm-12">
    <section class="panel panel-default">
        <header class="panel-heading font-bold">Thông tin về Album</header>
        <table class="table table-bordered">
            <tr>
                <td>
                    <label>Tên thư viện ảnh</label></td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>

            <tr>
                <td>
                    <label>Mô tả</label></td>
                <td>
                    @Html.Raw(Model.Description)
                </td>
            </tr>

            <tr>
                <td>
                    <label>Chuyên mục thư viện</label></td>
                <td>
                    @string.Join(", ", Model.Gallery_Category.Select(c => c.Name))
                </td>
            </tr>

            <tr>
                <td>
                    <label>Tổng số ảnh</label></td>
                <td>
                    @Model.Gallery_Picture.Count()
                </td>
            </tr>

            <tr>
                <td>
                    <label>Từ khóa</label></td>
                <td>@string.Join(", ", Model.System_Tag.Select(tag => tag.Name))</td>
            </tr>

            <tr>
                <td>
                    <label>Hiển thị</label></td>
                <td>
                    @Grid.DisplayShow(Model.Name, Model.IsShow)
                </td>
            </tr>
        </table>
    </section>
</div>

