@model FDI.Base.HtmlSetting
@{
    ViewBag.Title = ViewBag.ActionText + " Footer";
    Layout = "~/Areas/Admin/Views/Shared/_AjaxShare.cshtml";
}
<script type="text/javascript">
    $(function () {
        LoadCKEDITOR('Value', true);
        $("#HtmlSettingForm").validate({
            rules: {

                },
            submitHandler: function () { //onSubmit
                updateEditor();
                $.post(urlPostAction, $("#HtmlSettingForm").serialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").dialog('close'); //Đóng form thêm mới - sửa
                        createCloseMessage("Thông báo", data.Message, '#Page=1&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + ''); // Tạo thông báo khi click đóng thì chuyển đến url đích
                    }
                });
                return false;
            }
        });

        $("#close").click(function () {
            $("#dialog-form").html("").dialog('close');
        });
    });

</script>

<form id="HtmlSettingForm">
    <input type="hidden" name="do" id="do" value="@ViewBag.Action"/>
    <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID"/>
     <div class="col-sm-12">
        <section class="panel panel-default">
            <header class="panel-heading font-bold">Thông tin về nội dung html</header>
            <div class="panel-body">
                <div class="bs-example form-horizontal">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Mã</label>
                        <div class="col-lg-10">
                              <input type="text" name="Key" id="Key" value="@Model.Key" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Giá trị</label>
                        <div class="col-lg-10">
                             <textarea rows="10" class="form-control" name="Value" id="Value">@Model.Value</textarea>
                        </div>
                    </div>
               
                         <div class="form-group">
                        <label class="col-lg-2 control-label">Đường dẫn</label>
                        <div class="col-lg-10">
                            <input type="text" name="url" id="url" value="@Model.url" class="form-control"/>
                        </div>
                    </div>

                </div>
            </div>
        </section>
     </div>

    <div style="display: none;">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-success">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-success">Đóng lại</button>
    </div>

</form>

