@model FDI.Simple.ModelProductRatingItem

@{
    ViewBag.Title = "Danh sách đánh giá sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#gridItems');
    });
</script>

<section id="gridItems" class="vbox">
    <section class="scrollable wrapper w-f">
        <section class="panel panel-default">
            <table class="gridView" cellspacing="1">
                <tr>
                    <th><a href="#Field=ID">ID<span /></a></th>
                    <th><a href="#Field=RateNote">Đánh giá<span /></a></th>
                    <th><a href="#Field=RateAvg">Điểm<span /></a></th>
                    <th><a href="#">Id khách hàng<span /></a></th>
                    <th><a href="#">Khách hàng<span /></a></th>
                    <th><a href="#DateCreated">Ngày<span /></a></th>
                    <th class="act_view"></th>
                    <th class="act_edit"></th>
                    <th class="act_delete">
                        @if (Model.SystemActionItem.Delete)
                        {
                            <a href="#deleteAll" class="deleteAll" title="Xóa danh sách đã chọn">
                                <img src="/Content/Admin/images/gridview/delete.gif" style="border: none" alt="Xóa danh sách đã chọn" />
                            </a>
                        }
                    </th>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll" />
                    </th>
                </tr>
                @if (Model.SystemActionItem.ViewFull)
                {
                    foreach (var item in Model.ListItem)
                    {
                    <tr>
                        <td>@item.ID</td>
                        <td>@Html.Raw(item.RateNote)</td>
                        <td>@item.RateAvg</td>
                        <td>@item.CustomerID</td>
                        <td>@item.CustomerName</td>
                        <td>@item.DateCreated.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td class="act_view">
                            @if (Model.SystemActionItem.View)
                            {
                                @Grid.ActionView(item.ID, " đánh giá " + item.ID)
                            }
                        </td>
                        <td class="act_edit">
                            @if (Model.SystemActionItem.Edit)
                            {
                                @Grid.ActionEdit(item.ID, " đánh giá " + item.ID)
                            }
                        </td>
                        <td class="act_delete">
                            @if (Model.SystemActionItem.Delete)
                            {
                                @Grid.ActionDelete(item.ID, " đánh giá " + item.ID)
                            }
                        </td>
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check" /></td>
                    </tr>
                    }
                }
            </table>
        </section>
    </section>
    <footer class="footer bg-white b-t portlet">
        <div class="row m-t-xs">
            @Html.Raw(Model.PageHtml)
        </div>
    </footer>
</section>

