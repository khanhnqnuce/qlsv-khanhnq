@model FDI.Simple.ModelCustomerItem

@{
    ViewBag.Title = "ListItems";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#gridItems');
    });
</script>

<section id="gridItems" class="vbox">
    <section class="scrollable wrapper w-f">
        <section class="panel panel-default">
            <table class="gridView" cellspacing="1">
                <tr>
                    <th><a href="#Field=ID">ID<span /></a></th>
                    <th><a href="#Field=Fullname">Khách hàng<span /></a></th>
                    <th><a href="#Field=Email">Email<span /></a></th>
                    <th><a href="#Field=CustomerTypeID">Kiểu khách<span /></a></th>
                    <th><a href="#Field=Mobile">Số ĐT<span /></a></th>
                    <th><a href="#Field=CreatedOnUtc">Ngày đăng ký<span /></a></th>
                    <th><a href="#Field=IsActive">Kích hoạt<span /></a></th>
                    <th class="act_history"></th>
                    <th class="act_point"></th>
                    <th class="act_view"></th>
                    <th class="act_edit"></th>
                    <th class="act_show">
                        @if (Model.SystemActionItem.Show)
                        {
                            <a href="#showAll" class="showAll" title="Hiển thị danh sách đã chọn">
                                <img src="/Content/Admin/images/gridview/show.gif" style="border: none" alt="Hiển thị danh sách đã chọn" />
                            </a>
                        }
                    </th>
                    <th class="act_hide">
                        @if (Model.SystemActionItem.Hide)
                        {
                            <a href="#hideAll" class="hideAll" title="Ẩn danh sách đã chọn">
                                <img src="/Content/Admin/images/gridview/hide.gif" style="border: none" alt="Ẩn danh sách đã chọn" />
                            </a>
                        }
                    </th>
                    <th class="act_delete">
                        @if (Model.SystemActionItem.Delete)
                        {
                            <a href="#deleteAll" class="deleteAll" title="Xóa danh sách đã chọn">
                                <img src="/Content/Admin/images/gridview/delete.gif" style="border: none" alt="Xóa danh sách đã chọn" />
                            </a>
                        }
                    </th>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll" />
                    </th>
                </tr>
                @if (Model.SystemActionItem.ViewFull)
                {
                    foreach (var item in Model.ListItem)
                    {
                    <tr title="@item.FirstName @item.LastName">
                        <td>@item.ID</td>
                        <td>@item.Fullname</td>
                        <td>@item.Email</td>
                        <td>@item.CustomerType.Name</td>
                        <td>@item.Mobile</td>
                        <td>@(item.CreatedOnUtc.HasValue ? item.CreatedOnUtc.Value.ToString("dd/MM/yyyy") : "")</td>
                        <td>@Grid.DisplayShow(item.Fullname, item.IsActive != null && item.IsActive.Value)</td>
                        <td class="act_history">
                            @if (Model.SystemActionItem.View)
                            {
                                @Grid.ActionHistory(item.ID, item.Fullname)
                            }
                        </td>
                        <td class="act_point">
                            @if (Model.SystemActionItem.View)
                            {
                                @Grid.ActionPoint(item.ID, item.Fullname)
                            }
                        </td>
                        <td class="act_view">
                            @if (Model.SystemActionItem.View)
                            {
                                @Grid.ActionView(item.ID, item.Fullname)
                            }
                        </td>
                        <td class="act_edit">
                            @if (Model.SystemActionItem.Edit)
                            {
                                @Grid.ActionEdit(item.ID, item.Fullname)
                            }
                        </td>
                        <td class="act_show">
                            @if (Model.SystemActionItem.Show)
                            {
                                @Grid.ActionShow(item.ID, item.Fullname)
                            }
                        </td>
                        <td class="act_hide">
                            @if (Model.SystemActionItem.Hide)
                            {
                                @Grid.ActionHide(item.ID, item.Fullname)
                            }
                        </td>
                        <td class="act_delete">
                            @if (Model.SystemActionItem.Delete)
                            {
                                @Grid.ActionDelete(item.ID, item.Fullname)
                            }
                        </td>
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check" /></td>
                    </tr>
                    }
                }
            </table>
        </section>
    </section>
    <footer class="footer bg-white b-t portlet">
        <div class="row m-t-xs">
            @Html.Raw(Model.PageHtml)
        </div>
    </footer>
</section>