@model FDI.Simple.ModelTagItem
@{
    ViewBag.Title = "ListTag";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}

<section id="gridItems" class="vbox">
    <section class="scrollable wrapper w-f">
        <section class="panel panel-default">
            <table class="gridView" cellspacing="1">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" />
                        </th>
                        <th><a href="#Field=ID">ID<span /></a></th>
                        <th><a href="#Field=Name">Tên từ khóa<span /></a></th>
                        <th><a href="#Field=TotalProduct">Sản Phẩm<span /></a></th>
                        <th><a href="#Field=TotalNews">Tin tức<span /></a></th>
                        <th><a href="#Field=TotalQuestion">Hỏi đáp<span /></a></th>
                        <th><a href="#Field=Weight">Level<span /></a></th>
                        <th><a href="#Field=IsShow">Hiển thị<span /></a></th>
                        <th></th>
                        <th colspan="2" style="width: 12%;">Thao tác</th>
                    </tr>
                </thead>
                @if (Model.SystemActionItem.ViewFull)
                {
                    foreach (var item in Model.ListItem)
                    {
                    <tr title="@item.Name">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check" >
                        </td>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.TotalProduct</td>
                        <td>@item.TotalNews</td>
                        <td>@item.TotalQuestion</td>
                        <td>@item.Weight</td>
                        <td>
                            @if (Model.SystemActionItem.Show)
                            {
                                @Grid.ActionShow(item.ID, item.Name, item.IsShow)
                            }
                        </td>

                        <td></td>
                        <td class="btn-group">
                            @if (Model.SystemActionItem.View)
                            {
                                @Grid.ActionView(item.ID, item.Name)
                            }
                            @if (Model.SystemActionItem.Edit)
                            { 
                                @Grid.ActionEdit(item.ID, item.Name)
                            }
                            @if (Model.SystemActionItem.Delete)
                            {
                                @Grid.ActionDelete(item.ID, item.Name)
                            }

                        </td>
                    </tr>
                    }
                }
            </table>
        </section>
    </section>
    <footer class="footer bg-white b-t portlet">
        <div class="row m-t-xs">
            @Html.Raw(Model.PageHtml)
        </div>
    </footer>
</section>

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#gridItems');
    });
</script>
