@model FDI.Simple.ModelNewsItem
@{
    ViewBag.Title = "ListNews";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
} 
<section id="mygird" class="vbox">
    <section class="scrollable wrapper w-f">
        <section class="panel panel-default">
            <table class="gridView" cellspacing="1">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" />
                        </th>
                        <th><a href="#Field=ID">ID<span /></a></th>
                        <th><a href="#Field=Title">Tên bài viết<span /></a></th>
                        <th><a href="#Field=Show">Hiển thị<span /></a></th>
                        <th><a href="#Field=Hot">Hot<span /></a></th>
                        <th><a href="#Field=AllowComment">Chuyên mục<span /></a></th>
                        <th><a href="#Field=TotalComments">Comment<span /></a></th>
                        <th></th>
                        <th colspan="2" style="width: 130px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.SystemActionItem.ViewFull)
                    {
                        foreach (var item in Model.ListItem)
                        {
                        <tr title="@item.Title">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check" >
                            </td>
                            <td>@item.ID</td>
                            <td>@Grid.DisplayShowStrike(item.Title, item.IsShow == true)</td>
                            <td>
                                @if (Model.SystemActionItem.Show)
                                {
                                    @Grid.ActionShow(item.ID, item.Title, item.IsShow)
                                }
                            </td>
                            <td>@Grid.DisplayShow(item.Title, item.IsHot == true)</td>
                            <td>@Grid.DisplayShowStrike(item.CateName, item.IsShow == true)</td>
                            <td>@item.TotalComments</td>
                            <td><a href="/@item.TitleAscii" target="_blank">review</a></td>
                            <td class="btn-group">
                                @if (Model.SystemActionItem.View)
                                {
                                    @Grid.ActionView(item.ID, item.Title)
                                }
                                @if (Model.SystemActionItem.Edit)
                                { 
                                    @Grid.ActionEdit(item.ID, item.Title)
                                }
                                @if (Model.SystemActionItem.Delete)
                                {
                                    @Grid.ActionDelete(item.ID, item.Title)
                                }
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </section>
    </section>
    <footer class="footer bg-white b-t portlet">
        <div class="row m-t-xs">
            @Html.Raw(Model.PageHtml)
        </div>
    </footer>
</section>

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
