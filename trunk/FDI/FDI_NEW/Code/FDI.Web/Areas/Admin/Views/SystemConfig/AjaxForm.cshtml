@model FDI.Base.System_Config
@{
    ViewBag.Title = ViewBag.ActionText + " Cấu hình";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {

        $("#SystemConfigForm").validate({
            rules: {
                Name:
                    {
                        required: true,
                        minlength: 3,
                        maxlength: 100
                    },
                Email:
                    {
                        required: true,
                        minlength: 3,
                        email: true,
                    },
                Email1:
                    {

                        minlength: 3,
                        email: true,
                    },
                Phone:
                    {
                        required: true
                    },
                PhoneAdvice:
                    {
                        minlength: 3
                    },
                PhoneAdvice1:
                    {
                        minlength: 3

                    },
                PhoneAdvice2:
                    {
                        minlength: 3

                    }
            },
            submitHandler: function () { //onSubmit
                $.post(urlPostAction, $("#SystemConfigForm").serialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").dialog('close'); //Đóng form thêm mới - sửa
                        createCloseMessage("Thông báo", data.Message, '#Page=1&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + ''); // Tạo thông báo khi click đóng thì chuyển đến url đích
                    }
                });
                return false;
            }
        });

        $("#close").click(function () {
            $("#dialog-form").html("").dialog('close');
        });
    });
</script>
<style>
    #Address {
        display: block !important;
    }
</style>

<form id="SystemConfigForm">
    <input type="hidden" name="do" id="do" value="@ViewBag.Action"/>
    <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID"/>
    <div class="col-sm-12">
        <section class="panel panel-default">
            <header class="panel-heading font-bold">Thông tin về cấu hình</header>
            <div class="panel-body">
                <div class="bs-example form-horizontal">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Tên công ty</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" placeholder="..." name="Name" @(ViewBag.Action.ToString().Equals("Add") ? "class=autoPermalink" : "") id="Name"  value="@Model.Name"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Email</label>
                        <div class="col-lg-10">
                            <input type="text" name="Email" id="Email" value="@Model.Email" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Email đính kèm</label>
                        <div class="col-lg-10">
                            <input type="text" name="Email" id="Email" value="@Model.Email" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Số điện thoại</label>
                        <div class="col-lg-10">
                            <input type="text" name="Phone" id="Phone" value="@Model.Phone" class="form-control"/>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-2 control-label">Số điện thoại tư vấn 1</label>
                        <div class="col-lg-10">
                            <input type="text" name="PhoneAdvice" id="PhoneAdvice" value="@Model.PhoneAdvice" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Số điện thoại tư vấn 2</label>
                        <div class="col-lg-10">
                            <input type="text" name="PhoneAdvice1" id="PhoneAdvice1" value="@Model.PhoneAdvice1" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Số điện thoại tư vấn 3</label>
                        <div class="col-lg-10">
                            <input type="text" name="PhoneAdvice2" id="PhoneAdvice2" value="@Model.PhoneAdvice2" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Số Fax</label>
                        <div class="col-lg-10">
                            <input type="text" name="Fax" id="Fax" value="@Model.Fax" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Giấy phép kinh doanh</label>
                        <div class="col-lg-10">
                            <input type="text" name="BusinessLicence" id="BusinessLicence" value="@Model.BusinessLicence" class="form-control"/>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-2 control-label">Địa chỉ</label>
                        <div class="col-lg-10">
                           <textarea rows="8" id="Address" name="Address" class="form-control">@Model.Address</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Email gửi</label>
                        <div class="col-lg-10">
                            <input type="text" name="EmailSend" id="EmailSend" value="@Model.EmailSend" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Mật khẩu email gửi</label>
                        <div class="col-lg-10">
                            <input type="password" name="EmailSendPwd" id="EmailSendPwd" value="@Model.EmailSendPwd" class="form-control"/>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-2 control-label">Email nhận</label>
                        <div class="col-lg-10">
                            <input  name="EmailReceive" id="EmailReceive" value="@Model.EmailReceive" class="form-control"/>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <div class="checkbox col-md-6">
                                <label>
                                    @Html.CheckBox("IsShow") Hiện thị
                                </label>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </div>

    <div style="display: none;">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-success">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-success">Đóng lại</button>
    </div>
</form>
