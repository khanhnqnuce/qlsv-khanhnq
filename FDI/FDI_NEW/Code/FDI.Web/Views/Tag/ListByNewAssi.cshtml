@{
    Layout = null;
}
@model List<FDI.Simple.TagItem>
@if (Model.Count > 0)
{
    <text>Có thể bạn quan tâm: </text>
    foreach (var item in Model)
    {
        if (item.Link==null ||item.Link == "")
        {
            <a href="/Tag/@item.NameAscii">@item.Name</a>
        }
        else
        {
            <a href="/@item.Link">@item.Name</a>        
        }
    

    }
}
