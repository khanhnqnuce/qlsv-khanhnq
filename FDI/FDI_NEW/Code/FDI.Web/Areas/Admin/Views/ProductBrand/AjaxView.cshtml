@model FDI.Base.Shop_Brand
@{
    ViewBag.Title = "Xem chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}

<fieldset class="forms">
    <table class="tableforms tabledetails" cellspacing="1" width="100%">
        <tr>
            <td style="width:80px;" class="label"><label>Tên thương hiệu sản phẩm</label></td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td class="label"><label>Địa chỉ liên kết</label></td>
            <td>@Model.Link</td>
        </tr>
        <tr>
            <td class="label"><label>Mô tả</label></td>
            <td>@Html.Raw(Model.Description)</td>
        </tr>

        <tr>
            <td class="label"><label>Sắp xếp</label></td>
            <td>@Model.Order</td>
        </tr>
        
        <tr>
            <td class="label"><label>Hiển thị</label></td>
            <td>@Grid.DisplayShow(Model.Name, Model.IsShow)</td>
        </tr>
    </table>
</fieldset>
