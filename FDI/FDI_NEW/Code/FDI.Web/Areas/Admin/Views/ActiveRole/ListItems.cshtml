@model FDI.Simple.ModelActiveRoleItem
@{
    ViewBag.Title = "ListItems";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}


<section id="gridItems" class="vbox">
    <section class="scrollable wrapper w-f">
        <section class="panel panel-default">
            <table class="gridView" cellspacing="1">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" />
                        </th>
                        <th><a href="#Field=Fullname">Tên tính năng<span /></a></th>
                        <th><a href="#Field=CustomerTypeID">Thứ tự<span /></a></th>
                        <th></th>
                        <th colspan="2" style="width: 12%;">Thao tác</th>
                    </tr>
                </thead>
                @if (Model.SystemActionItem.ViewFull)
                {
                    foreach (var item in Model.ListItem)
                    {
                    <tr title="@item.ID @item.NameActive">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check" >
                        </td>
                        <td>@item.NameActive</td>
                        <td>@item.Ord</td>
                        <td></td>
                        <td class="btn-group">
                            @if (Model.SystemActionItem.View)
                            {
                                @Grid.ActionView(item.ID, item.NameActive)
                            }
                            @if (Model.SystemActionItem.Edit)
                            { 
                                @Grid.ActionEdit(item.ID, item.NameActive)
                            }
                            @if (Model.SystemActionItem.Delete)
                            {
                                @Grid.ActionDelete(item.ID, item.NameActive)
                            }
                        </td>
                    </tr>
                    }
                }
            </table>
        </section>
    </section>
    <footer class="footer bg-white b-t portlet">
        <div class="row m-t-xs">
            @Html.Raw(Model.PageHtml)
        </div>
    </footer>
</section>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#gridItems');
    });
</script>
