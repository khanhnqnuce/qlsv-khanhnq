@model FDI.Simple.ModelCustomerContactItem

@{
    ViewBag.Title = "ListItems";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}
<section id="mygird" class="vbox">
    <section class="scrollable wrapper w-f">
        <section class="panel panel-default">
            <table class="gridView" cellspacing="1">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" />
                        </th>
                        <th><a href="#Field=ID">ID<span /></a></th>
                        <th><a href="#Field=Name">Người gửi<span /></a></th>
                        <th><a href="#Field=Email">Email<span /></a></th>
                        <th><a href="#Field=Email">Số điện thoại<span /></a></th>
                        <th><a href="#Field=CreatedOnUtc">Ngày gửi<span /></a></th>
                        <th>Hình thức liên hệ</th>
                        <th>Trạng thái</th>
                        <th></th>
                        <th colspan="2" style="width: auto;">Thao tác</th>
                    </tr>
                </thead>
                @if (Model.SystemActionItem.ViewFull)
                {
                    foreach (var item in Model.ListItem)
                    {
                    <tr title="@item.Name">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check" >
                        </td>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@Convert.ToDateTime(item.CreatedOnUtc).ToString("dd/MM/yyyy hh:mm:ss")</td>
                        @if (item.TypeContact == 0)
                        {
                            <td>Gửi liên hệ</td>  
                        }
                        else
                        {
                            <td>Đăng ký nhận tin</td>  
                        }

                        @if (item.Status == true)
                        {
                            <td>Đã liên hệ</td>
                        }
                        else
                        {
                            <td>Chưa liên hệ</td>
                        }
                        <td></td>
                        <td class="btn-group">
                            @if (Model.SystemActionItem.Active)
                            {
                                @Grid.ActionActive(item.ID, item.Name, item.Status)
                            }

                            @if (Model.SystemActionItem.View)
                            {
                                @Grid.ActionView(item.ID, item.Name)
                            }

                            @if (Model.SystemActionItem.Delete)
                            {
                                @Grid.ActionDelete(item.ID, item.Name)
                            }
                        </td>
                    </tr>
                    }
                }
            </table>
        </section>
    </section>
    <footer class="footer bg-white b-t portlet">
        <div class="row m-t-xs">
            @Html.Raw(Model.PageHtml)
        </div>
    </footer>
</section>

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
