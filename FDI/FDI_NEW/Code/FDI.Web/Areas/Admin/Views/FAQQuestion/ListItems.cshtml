@model FDI.Simple.ModelFAQQuestionItem
@{
    ViewBag.Title = "ListQuestion";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}

<section id="gridItems" class="vbox">
    <section class="scrollable wrapper w-f">
        <section class="panel panel-default">
            <table class="gridView" cellspacing="1">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" />
                        </th>
                        <th><a href="#Field=ID">ID<span /></a></th>
                        <th><a href="#Field=Title">Tên câu hỏi<span /></a></th>
                        <th>Chuyên mục</th>
                        <th><a href="#Field=AllowComment">Người gửi<span /></a></th>
                        <th><a href="#Field=IsShow">Ngày gửi<span /></a></th>
                        <th>H.Thị</th>
                        <th>Trả lời</th>
                        <th></th>
                        <th colspan="2" style="width: 130px;">Thao tác</th>

                    </tr>
                </thead>
                @if (Model.SystemActionItem.ViewFull)
                {
                    foreach (var item in Model.ListItem)
                    {
                    <tr title="@item.Title">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check" >
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.ID)</td>
                        <td>@Grid.DisplayShowStrike(item.Title, item.IsShow)</td>
                        <td>@item.FAQ_Category.Name</td>
                        <td>@item.Fullname</td>
                        <td>@item.DateCreated.ToString("dd/MM/yyyy")</td>
                        <td>@Grid.DisplayShow(item.Title, item.IsShow)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalAnswers)</td>
                        <td></td>
                        <td class="btn-group">
                            @if (Model.SystemActionItem.View)
                            {
                                @Grid.ActionView(item.ID, item.Title)
                            }
                            @if (Model.SystemActionItem.Edit)
                            { 
                                @Grid.ActionEdit(item.ID, item.Title)
                            }
                            @if (Model.SystemActionItem.Delete)
                            {
                                @Grid.ActionDelete(item.ID, item.Title)
                            }
                        </td>
                    </tr>
                    }
                }
            </table>
        </section>
    </section>
    <footer class="footer bg-white b-t portlet">
        <div class="row m-t-xs">
            @Html.Raw(Model.PageHtml)
        </div>
    </footer>
</section>

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#gridItems');
    });
</script>
