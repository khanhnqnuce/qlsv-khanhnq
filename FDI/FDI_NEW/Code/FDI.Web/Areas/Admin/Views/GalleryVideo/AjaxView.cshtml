@using System.Diagnostics
@model FDI.Base.Gallery_Video

@{
    ViewBag.Title = "Xem chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}

<div class="col-sm-12">
    <section class="panel panel-default">
        <header class="panel-heading font-bold">Thông tin về Video</header>
        <table class="table table-bordered">
            <tr>
                <td><label>Tên video</label></td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>
        
            <tr>
                <td><label>Mô tả</label></td>
                <td>
                    @Html.Raw(Model.Description)
                </td>
            </tr>

            <tr>
                <td><label>Video</label></td>
                <td>
                    <iframe width="100%" height="300px" src="//www.youtube.com/embed/@Model.Url" frameborder="0" allowfullscreen></iframe>
                </td>
            </tr>

            <tr>
                <td><label>Chuyên mục thư viện</label></td>
                <td>
                    @((Model.CategoryID.HasValue) ? Model.Gallery_Category.Name : "...")
                </td>
            </tr>

            <tr>
                <td><label>Album video</label></td>
                <td>
                    @((Model.AlbumID.HasValue) ? Model.Gallery_Album.Name : "...")
                </td>
            </tr>

            <tr>
                <td><label>Hiển thị</label></td>
                <td>
                    @Grid.DisplayShow(Model.Name, Model.IsShow.HasValue && Model.IsShow.Value)
                </td>
            </tr>
            <tr>
                <td><label>Ngày thêm</label></td>
                <td>
                    @if(Model.DateCreated != null){
                        @Model.DateCreated.Value.ToString("dd/MM/yyyy hh:mm:ss tt")
                    }
                </td>
            </tr>

        </table>
    </section>
</div>


