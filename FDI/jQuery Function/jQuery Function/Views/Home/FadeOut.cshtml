@{
    ViewBag.Title = "FadeOut";
    Layout = null;
}
<style>
    div.test {
        background-color: #87cefa;
        float: left;
        margin-right: 20px;
        height: 100px;
        width: 100px;
    }

    p {
        clear: both;
    }
</style>
<style>
    html, body {
        width: 1000px;
        border: 0;
        margin: 0 auto;
        padding: 0;
    }
</style>
<script src="~/Scripts/jquery-latest.js"></script>

<!--Content-->
<div style="width: 100%; height: auto">
    <p />
    <button class="btn1">Click</button>
    <div class="test test01">fadeOut(2000)</div>
    <div class="test test02">fadeOut('slow')</div>
    <div class="test test03">fadeOut()</div>
</div>
<!--End Content-->

<script>
    $(function () {
        $('button.btn1').click(function () {
            $('.test03').fadeOut(2000);
            $('.test02').fadeOut('slow');
            $('.test01').fadeOut();
        });
    });
</script>

